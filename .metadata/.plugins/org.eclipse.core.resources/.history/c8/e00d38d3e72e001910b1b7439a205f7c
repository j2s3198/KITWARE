<mapper namespace="it.kit.gware.calendar.Calendar_Dao">

	<resultMap id="memberResult" type="com.kitri.test.member.Member">
		<result column="calendar_id" property="calendar_id" />
		<result column="calendar_cate" property="calendar_cate" />
		<result column="calendar_member_id" property="calendar_member_id" />
		<result column="calendar_start" property="calendar_start" />
		<result column="calendar_end" property="calendar_end" />
		<result column="calendar_title" property="calendar_title" />
		<result column="calendar_content" property="calendar_content" />
		<result column="calendar_color" property="calendar_color" />
	</resultMap>


	<insert id="insert" parameterType="it.kit.gware.Calendar_Dto">
		insert into Calendar(calendar_id, calendar_member_id, calendar_start, calendar_end, calendar_title, calendar_content) values(seq_calendar_id.nextval, #{calendar_member_id}, #{calendar_start}, #{calendar_end}, #{calendar_title}, #{calendar_content})
	</insert>
	
	<select id="select" parameterType="String" resultMap="memberResult">
		select * from prod_mem where id = #{id}
	</select>
	
	<select id="update" parameterType="com.kitri.test.member.Member">
		update prod_mem set pwd=#{pwd}, name=#{name}, email=#{email} where id=#{id}
	</select>
	
	<update id="delete" parameterType="String">
		delete prod_mem where id=#{id}
	</update>
	
	<select id="login" parameterType="String" resultType="String">
		select pwd from prod_mem where id = #{id}
	</select>
	

